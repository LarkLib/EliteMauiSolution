<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Elite.LMS.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Elite.LMS.Maui"
    Title="Elite.LMS.Maui"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <StackLayout BackgroundColor="Transparent">
            <Grid ColumnDefinitions="48, *" Margin="4,24,16,16">
                <Label TextColor="#77d065"
                       FontSize="22"
                       Text="Binding TitleText"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Grid.Column="1" />
            </Grid>
            <Label Margin="16,10"
                   TextColor="#77d065"
                   Text="Binding Description"
                   FontSize="14"/>
            <Label Margin="16,20,16,0"
                   TextColor="#77d065"
                   Text="Binding Version"
                   FontSize="14"/>
        </StackLayout>
    </Shell.FlyoutHeader>

    <ShellContent FlyoutItemIsVisible="False"
        BindingContext="{Binding}"
        ContentTemplate="{DataTemplate local:MainPage}"/>
</Shell>
